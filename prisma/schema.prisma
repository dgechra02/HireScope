generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model AddJob {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  title          String
  description    String
  location       String
  salary         Float
  employmentType String
  jobType        String
}

model User {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId // in db this id stores as an object
  fullName    String
  email       String        @unique
  password    String
  company     Company? // user ki company > not neccessary every user have their company
  // resume      Resume?
  application Application[] // ek user ki multiple applications ho sakti hai
}

// 1 - many relation
model Openings {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  title          String
  description    String
  location       String
  salary         Float
  employmentType String // @default('Full-time')
  jobType        String
  company_id     String        @db.ObjectId
  company        Company       @relation(fields: [company_id], references: [id])
  application    Application[]
}

// 1 - 1 connection between User and Company
model Company {
  id                 String     @id @default(auto()) @map("_id") @db.ObjectId
  companyName        String
  companyDescription String
  companyOwnerId     String     @unique @db.ObjectId // to match krane ke liye esko bhi object bnao
  companyLogo        String?
  owner              User       @relation(fields: [companyOwnerId], references: [id]) // company ka user || User ke under esi id dhundo ki vo match kr jaye companyOwnerId se
  openings           Openings[] // ek company ki multiple opening ho sakti hai 
  reviews            Review[]
}

model Resume {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  qualifications String
  education      String
  cgpa           String
  graduationYear String
  ownerId        String @unique @db.ObjectId
  // owner          User   @relation(fields: [ownerId], references: [id])
}

model Review {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  content    String
  user_id    String  @db.ObjectId
  // user       User   @relation(fields: [user_id], references: [id])
  company_id String  @db.ObjectId
  company    Company @relation(fields: [company_id], references: [id])
}

model Application {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  user_id String   @db.ObjectId
  user    User     @relation(fields: [user_id], references: [id])
  job_id  String   @db.ObjectId
  job     Openings @relation(fields: [job_id], references: [id])
}
